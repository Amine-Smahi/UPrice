<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jetlight.uprice.PhaseOneActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:padding="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20dp"
        android:text="8/12"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true" />
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/home"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:onClick="Restart"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true">
     <ImageView
         android:background="@mipmap/clock"
         android:layout_width="30dp"
         android:layout_height="30dp"/>
        <TextView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#fff"
            android:layout_marginTop="2dp"
            android:text="00:05"/>
    </LinearLayout>
</RelativeLayout>
    <ImageView
        android:id="@+id/ImageViewproductImage"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:padding="8dp"
        android:foregroundGravity="center"
        android:background="@drawable/card_background_images"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Guess the price of"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/TextViewproductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="OMO 250G"
        android:layout_margin="2dp"
        android:textSize="25dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/EditTextproductPrice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#5DA9F4"
            android:textSize="22dp"
            android:gravity="center"
            android:inputType="number"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DA"
            android:textSize="22dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Let's Go"
            android:background="@drawable/button_radius"
            android:textColor="#fff"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:onClick="submitPrice"
            />
    </LinearLayout>

</LinearLayout>
